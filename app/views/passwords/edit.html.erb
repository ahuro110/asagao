<% @page_title = "パスワード変更" %>
<h1><%= @page_title %></h1>

<div class="toolbar"><%= link_to "マイアカウントに戻る", :account %></div>

<%= form_for @member, as: "account", url: :password do |f| %>
  <%= render "shared/errors", obj: @member %>

  <table class="attr">
    <tr>
      <th><%= f.label :current_password %></th>
      <th><%= f.password_field :current_password %>
    </tr>
    <tr>
      <th><%= f.label :password %></th>
      <th><%= f.password_field :password %>
    </tr>
    <tr>
      <th><%= f.label :password_confirmation %></th>
      <th><%= f.password_field :password_confirmation %></th>
    </tr>
  </table>

  <div><%= f.submit "変更" %></div>
<% end %>